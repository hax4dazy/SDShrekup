@page "/"
@inject Microsoft.AspNetCore.Components.NavigationManager UriHelper
<!-- <img class="ui small image" src="/img/logo.png" style="display:block;margin-left:auto;margin-right:auto;margin-bottom:1.5rem;width:60%" /> -->
<BSImage Alignment="Alignment.Center" IsResponsive="true" src="/img/logo_big.png" style="width:60%"></BSImage>
<br />
<BSCard CardType="CardType.Card">
    <BSCard CardType="CardType.Body">
        Homebrew SD Setup is a website for and by shrek to honor shrek. Have you shreked today?
    </BSCard>
</BSCard>

<br />

<BSCard CardType="CardType.Card">
    <BSCard CardType="CardType.Body">
        <h3 style="margin-bottom:0.5em;">Select a Console</h3>
        <div class="ui link cards justify-content-center" style="margin-bottom:1.5rem">
            @foreach (Platform k in G.manifest.Platforms.Values) {
                if (!k.Visible) { continue; }
                <div class="card" style="max-width:30rem">
                    <div class="image" @onclick="@(() => Navigate("/console?" + k.ID))">
                        <img src="@k.HomeIcon">
                    </div>
                </div>
            }
        </div>
    </BSCard>
</BSCard>

@functions {

    private void Navigate(string url) {
        UriHelper.NavigateTo(url);
    }
}
